@model Applespace.Models.Clientes

@{
    ViewData["Title"] = "Alterar Perfil";
    Layout = "_LayoutLogin";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4 fw-bold">Alterar Dados</h2>

    <form asp-action="AlterarPerfil" asp-controller="Perfil" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label>Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Seu nome completo" required />
        </div>

        <div class="form-group mb-3">
            <label>Email</label>
            <input asp-for="Email" class="form-control" placeholder="Seu email" required />
        </div>

        <div class="form-group mb-3">
            <label>Telefone</label>
            <input asp-for="Telefone" class="form-control" placeholder="Seu telefone" required />
        </div>

        <div class="form-group mb-3">
            <label>CPF</label>
            <input asp-for="CPF" class="form-control" placeholder="Seu CPF" required />
        </div>

        <div class="form-group mb-4">
            <label>Senha</label>
            <input asp-for="Senha" class="form-control" placeholder="Sua senha" required />
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Salvar</button>
            <a asp-action="Perfil" class="btn btn-secondary w-100">Cancelar</a>
        </div>
    </form>
</div>

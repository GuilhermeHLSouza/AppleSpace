@model Applespace.Models.Clientes

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "_LayoutLogin";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4">Cadastro de Usuário</h2>

    <form asp-action="Cadastrar" method="post">
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome completo</label>
            <input asp-for="Nome" class="form-control" placeholder="Digite seu nome" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Digite seu email" type="email" />
        </div>

        <div class="mb-3">
            <label asp-for="Senha" class="form-label">Senha</label>
            <input asp-for="Senha" class="form-control" placeholder="Digite sua senha" type="password" />
        </div>

        <div class="mb-3">
            <label asp-for="Telefone" class="form-label">Telefone</label>
            <input asp-for="Telefone" class="form-control" placeholder="(xx) xxxxx-xxxx" type="tel" />
        </div>

        <div class="mb-3">
            <label asp-for="CPF" class="form-label">CPF</label>
            <input asp-for="CPF" class="form-control" placeholder="Apenas números" />
        </div>

        <button type="submit" class="btn btn-success w-100">Cadastrar</button>
    </form>

    <div class="text-center mt-3">
        <a href="@Url.Action("Login", "Home")">Já tem conta? Faça login</a>
    </div>
</div>
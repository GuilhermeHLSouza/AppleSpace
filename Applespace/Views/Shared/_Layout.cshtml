<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppleSpace</title>

    <!-- Bootstrap core -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppleSpace.styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
        }

        :root {
            --as-primary: #0d0d0d;
            --as-accent: #06c;
            --as-light: #f5f5f7;
        }

        body {
            background: var(--as-light);
            color: var(--as-primary);
            scroll-behavior: smooth;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar-brand img {
            filter: brightness(0) invert(1);
        }

        #productNav {
            overflow-x: auto;
            white-space: nowrap;
        }

            #productNav .nav-link {
                color: #fff;
                font-weight: 500;
                padding: .75rem 1.25rem;
            }

                #productNav .nav-link.active {
                    color: var(--as-accent);
                    border-bottom: 2px solid var(--as-accent);
                }

        .product-card {
            border: 1px solid #ddd;
            border-radius: 1rem;
            box-shadow: 0 2px 8px rgba(0,0,0,.08);
            transition: transform 0.2s, border-color 0.2s, box-shadow 0.2s;
        }

            .product-card:hover {
                border-color: #2979FF;
                box-shadow: 0 0 15px rgba(41, 121, 255, 0.25);
                transform: translateY(-5px);
            }

            .product-card .btn {
                border-radius: 2rem;
                padding: .5rem 1rem;
                transition: all 0.3s ease;
            }

                .product-card .btn:hover {
                    background-color: #2979FF;
                    color: #fff;
                    border-color: #2979FF;
                }

        /* hero images slightly shorter */
        #heroCarousel .carousel-item img {
            width: 100%;
            height: auto;
            max-height: 70vh;
            object-fit: contain;
        }

        .product-img {
            width: 100%;
            aspect-ratio: 1/1;
            object-fit: contain;
        }

        /* wider centered search */
        .search-wrapper {
            flex: 1 1 0;
            max-width: 450px;
        }

            .search-wrapper input {
                min-width: 300px;
            }

        #benefits {
            margin-left: 0;
            margin-right: 0;
        }

        .benefit-card {
            border: none;
            border-radius: 1.5rem;
            box-shadow: 0 4px 12px rgba(0,0,0,.06);
            transition: transform .2s;
        }

            .benefit-card:hover {
                transform: translateY(-4px);
            }

        #benefits {
            margin: 0;
            padding-left: 0;
            padding-right: 0;
        }

            #benefits .benefit-wrapper {
                max-width: 1400px;
                margin: auto;
            }

        #main-content {
            padding-top: 3rem;
        }

        .search-input {
            border-radius: 2rem;
        }

        .carousel-inner img {
            max-height: 600px;
            object-fit: cover;
        }

        .highlight-bar {
            background-color: #2979FF; /* Azul da sua marca */
            letter-spacing: 1px;
            text-transform: uppercase;
        }
    </style>

</head>
<body data-bs-spy="scroll" data-bs-target="#productNav" data-bs-offset="80" tabindex="0">

    <header class="fixed-top">
        <nav class="navbar navbar-dark bg-dark py-3">
            <div class="container-xl d-flex align-items-center gap-4">
                <a class="navbar-brand" href="/">
                    <img src="/img/maca.png" alt="AppleSpace" width="32" height="32" />
                </a>
                <div class="search-bar flex-fill mx-4 position-relative">
                    <input type="text" class="form-control search-input ps-5 pe-5" placeholder="Buscar produtos..." />
                    <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                    <i class="bi bi-list position-absolute top-50 end-0 translate-middle-y me-3"></i>
                </div>
                <div class="d-flex align-items-center gap-4">
                    <a href="/Carrinho"><img src="/img/cart.png" width="28" height="28" alt="Carrinho" /></a>
                    <a href="/Home/Login"><img src="/img/user.png" width="28" height="28" alt="Conta" /></a>
                </div>
            </div>
        </nav>

        <nav id="productNav" class="navbar navbar-expand bg-dark shadow-sm">
            <div class="container-xl justify-content-center">
                <ul class="navbar-nav gap-1">
                    <li class="nav-item"><a class="nav-link" href="#iphone">iPhone</a></li>
                    <li class="nav-item"><a class="nav-link" href="#ipad">iPad</a></li>
                    <li class="nav-item"><a class="nav-link" href="#watch">Apple Watch</a></li>
                    <li class="nav-item"><a class="nav-link" href="#airpods">AirPods</a></li>
                    <li class="nav-item"><a class="nav-link" href="#mac">Mac</a></li>
                </ul>
            </div>
        </nav>
    </header>
    
    <div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
        <!-- Indicadores (bolinhas) -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <!-- Slides -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/img/banner1.png" class="d-block w-100" alt="Banner 1">
            </div>
            <div class="carousel-item">
                <img src="/img/macbook.png" class="d-block w-100" alt="Banner 2">
            </div>
            <div class="carousel-item">
                <img src="/img/iphone16.png" class="d-block w-100" alt="Banner 3">
            </div>
        </div>

        <!-- Setinha esquerda -->
        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
            <span class="visually-hidden">Anterior</span>
        </button>

        <!-- Setinha direita -->
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="visually-hidden">Próximo</span>
        </button>
    </div>

    <section class="highlight-bar text-center text-white py-2">
        <h5 class="mb-0 fw-bold">NOSSOS PRODUTOS EM DESTAQUE</h5>
    </section>

    <div id="main-content" class="container my-5">
        @RenderBody()
    </div>
    

    <footer class="bg-dark text-light pt-5 pb-3 mt-auto w-100">
        <div class="container-xl">
            <div class="row gy-4">
                <!-- Redes Sociais -->
                <div class="col-12 col-md-3">
                    <h5 class="mb-3">Redes&nbsp;Sociais</h5>
                    <ul class="list-unstyled d-flex gap-3 fs-4">
                        <li><a class="text-light" href="https://www.instagram.com/applespace.store/" aria-label="Instagram"><i class="bi bi-instagram"></i></a></li>
                        <li><a class="text-light" href="#" aria-label="Twitter"><i class="bi bi-twitter-x"></i></a></li>
                        <li><a class="text-light" href="http://wa.link/y3cbp8" aria-label="WhatsApp"><i class="bi bi-whatsapp"></i></a></li>
                    </ul>
                </div>

                <!-- Empresa -->
                <div class="col-6 col-md-2">
                    <h5 class="mb-3">Empresa</h5>
                    <ul class="list-unstyled small">
                        <li><a class="text-light text-decoration-none" href="#">Quem somos</a></li>
                        <li><a class="text-light text-decoration-none" href="#">Política de Privacidade</a></li>
                        <li><a class="text-light text-decoration-none" href="#">Promoções</a></li>
                    </ul>
                </div>

                <!-- Conta -->
                <div class="col-6 col-md-2">
                    <h5 class="mb-3">Conta</h5>
                    <ul class="list-unstyled small">
                        <li><a class="text-light text-decoration-none" href="/Home/Perfil">Minha Conta</a></li>
                        <li><a class="text-light text-decoration-none" href="#">Meus Pedidos</a></li>
                        <li><a class="text-light text-decoration-none" href="#">Meus Dados</a></li>
                    </ul>
                </div>

                <!-- Ajuda -->
                <div class="col-12 col-md-3">
                    <h5 class="mb-3">Ajuda</h5>
                    <ul class="list-unstyled small">
                        <li><a class="text-light text-decoration-none" href="#">Fale Conosco</a></li>
                        <li><a class="text-light text-decoration-none" href="#">FAQ</a></li>
                        <li><a class="text-light text-decoration-none" href="#">Trocas e Devoluções</a></li>
                    </ul>
                </div>
            </div>

            <hr class="border-secondary my-4" />
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center small">
                <span>&copy; 2025 AppleSpace - Todos os direitos reservados | CNPJ 18.053.365/0001-40 <br> R. Guaipá, 678 - Vila Leopoldina, São Paulo - SP, 05089-000</span>
                <span class="mt-2 mt-md-0">DESENVOLVIDO POR <strong>INOVEDEVS</strong></span>
            </div>
        </div>
    </footer>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>

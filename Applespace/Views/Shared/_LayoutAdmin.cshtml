@{
    var admin = Newtonsoft.Json.JsonConvert.DeserializeObject<Applespace.Models.Clientes>(
        Context.Session.GetString("adminLogado") ?? "{}"
    );
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppleSpace Admin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div>
            

            <!-- PERFIL ADMIN -->
            <div class="profile">
                <img src="/img/armando.jpg" alt="Avatar Admin">
                <div class="name">Ol√°, @admin.nome</div>
                <div class="role">Administrador</div>
            </div>

            <!-- MENU -->
            <nav>
                <a href="/Admin/PaginaAdm"><i class="bi bi-house"></i> Dashboard</a>
                <hr />
                <a href="/Admin/CadastrarProdutos"><i class="bi bi-box"></i> Cadastrar Produto</a>
                <a href="/Admin/Produtos"><i class="bi bi-card-list"></i>Produtos</a>
                <hr />
                <a href="/Admin/CadastrarCupons"><i class="bi bi-ticket-perforated"></i> Cadastrar Cupom</a>
                <a href="/Admin/Cupons"><i class="bi bi-ticket"></i>Cupons</a>
            </nav>
        </div>

        <!-- SAIR -->
        <div class="logout">
            <a href="/Admin/Logout"><i class="bi bi-box-arrow-right"></i> Sair</a>
        </div>
    </div>

    <!-- Main -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #f8f9fc;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #0F101B;
            position: fixed;
            top: 0;
            left: 0;
            padding: 30px 20px;
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar .logo {
                text-align: center;
                margin-bottom: 10px;
            }

                .sidebar .logo img {
                    width: 100px;
                    height: auto;
                }

            .sidebar .profile {
                text-align: center;
                margin-bottom: 30px;
            }

                .sidebar .profile img {
                    width: 70px;
                    height: 70px;
                    border-radius: 50%;
                    border: 2px solid #1E293B;
                    object-fit: cover;
                    margin-bottom: 8px;
                }

                .sidebar .profile .name {
                    font-weight: bold;
                    color: #fff;
                    font-size: 16px;
                }

                .sidebar .profile .role {
                    font-size: 13px;
                    color: #94a3b8;
                }

            .sidebar nav {
                display: flex;
                flex-direction: column;
                gap: 10px;
            }

                .sidebar nav a {
                    color: #cbd5e1;
                    display: flex;
                    align-items: center;
                    gap: 10px;
                    padding: 10px 15px;
                    border-radius: 10px;
                    text-decoration: none;
                    transition: 0.2s;
                    font-weight: 500;
                }

                    .sidebar nav a:hover,
                    .sidebar nav a.active {
                        background-color: #1E293B;
                        color: white;
                    }

            .sidebar hr {
                border-color: #334155;
                margin: 15px 0;
            }

            .sidebar .logout {
                margin-top: auto;
            }

                .sidebar .logout a {
                    color: #f87171;
                    display: flex;
                    align-items: center;
                    gap: 10px;
                    padding: 10px 15px;
                    border-radius: 10px;
                    text-decoration: none;
                    transition: 0.2s;
                    font-weight: 500;
                }

                    .sidebar .logout a:hover {
                        background-color: #1E293B;
                        color: #f87171;
                    }

        .main-content {
            margin-left: 250px;
            padding: 30px;
            min-height: 100vh;
            background-color: #f1f5f9;
        }
    </style>
</body>
</html>

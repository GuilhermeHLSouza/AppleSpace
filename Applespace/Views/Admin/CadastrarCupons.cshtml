@model Cupom
@{
    ViewData["Title"] = "Cadastrar Cupom";
    Layout = "_LayoutAdmin";
}

<h2 class="mb-4 text-center fw-bold">Cadastrar Novo Cupom</h2>

@if (ViewBag.Mensagem != null)
{
    <div class="alert alert-success text-center">@ViewBag.Mensagem</div>
}

<form method="post" class="mx-auto" style="max-width: 500px;">
    <div class="mb-3">
        <label class="form-label">Código do Cupom</label>
        <input asp-for="Codigo" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <select asp-for="Tipo" class="form-control" required>
            <option value="porcentagem">Porcentagem (%)</option>
            <option value="frete">Frete Grátis</option>
            <option value="valorfixo">Valor Fixo (R$)</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Valor</label>
        <input asp-for="Valor" type="number" step="0.01" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Data de Expiração</label>
        <input asp-for="Expiracao" type="datetime-local" class="form-control" required />
    </div>
    <div class="form-check mb-3">
        <input asp-for="Ativo" class="form-check-input" type="checkbox" checked />
        <label class="form-check-label">Cupom Ativo</label>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary px-4">Cadastrar</button>
    </div>
</form>

@model Applespace.Models.Produtos
@{
    ViewData["Title"] = "Remover Produto";
    Layout = "_LayoutAdmin";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4 text-danger">Confirmar Remoção</h2>

    <div class="card border-danger">
        <div class="card-body">
            <h5 class="card-title">Você tem certeza que deseja remover o produto abaixo?</h5>

            <ul class="list-group list-group-flush my-3">
                <li class="list-group-item"><strong>Código de Barras:</strong> @Model.CodBarra</li>
                <li class="list-group-item"><strong>Nome:</strong> @Model.Nome</li>
                <li class="list-group-item"><strong>Descrição:</strong> @Model.Descricao</li>
                <li class="list-group-item"><strong>Valor:</strong> R$ @Model.Valor.ToString("F2")</li>
                <li class="list-group-item"><strong>Estoque:</strong> @Model.Estoque</li>
                <li class="list-group-item"><strong>Imagem:</strong> @Model.Img</li>
            </ul>

            <form asp-action="Excluir" method="post">
                <input type="hidden" name="id" value="@Model.CodBarra" />
                <button type="submit" class="btn btn-danger">Remover</button>
                <a href="@Url.Action("PaginaAdm", "Admin")" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
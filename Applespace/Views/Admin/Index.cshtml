@model Applespace.Models.Administradores
@{
    ViewData["Title"] = "Login do Administrador";
    Layout = "_LayoutLogin";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">Login do Administrador</h2>

    @if (ViewData["msg"] != null)
    {
        <div class="alert alert-danger text-center">
            @ViewData["msg"]
        </div>
    }

    <form asp-action="Index" method="post">
        <div class="form-group mb-3">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" id="Nome" name="Nome" required />
        </div>

        <div class="form-group mb-3">
            <label for="Senha">Senha</label>
            <input type="password" class="form-control" id="Senha" name="Senha" required />
        </div>

        <div class="form-group mb-4">
            <label for="IdAdm">ID do Administrador</label>
            <input type="number" class="form-control" id="IdAdm" name="IdAdm" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Entrar</button>
    </form>
</div>
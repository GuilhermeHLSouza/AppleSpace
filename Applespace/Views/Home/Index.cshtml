@model List<Applespace.Models.Produtos>
@{
    ViewData["Title"] = "Inicio";
}




<section class="container py-5">
    <h2 class="text-center mb-4">iPhones</h2>
    <div class="row g-4">
        @foreach (var prod in Model.Where(p => p.Id_Cate == 1))
        {
            <div class="col-6 col-md-4 col-lg-3 d-flex">
                <div class="card flex-fill text-center shadow-sm product-card" onclick="AbrirProduto(@prod.codBarra)" style="cursor:pointer;">
                    <img src="@prod.img" alt="@prod.nome" class="card-img-top p-3 product-img" />
                    <div class="card-body">
                        <h5 class="card-title fw-semibold">@prod.nome</h5>
                        <p class="text-primary fw-bold fs-5 mb-1">R$ @prod.valor.ToString("F2")</p>
                        <p class="text-muted small">ou 10x de R$ @((prod.valor / 10).ToString("F2"))</p>
                        <a href="/Home/Produto/@prod.codBarra"
                           class="btn btn-outline-primary rounded-pill mt-2 w-100 transition">
                            Ver Produto
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>


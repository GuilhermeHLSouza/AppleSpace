@model Applespace.Models.Clientes

@{
    ViewData["Title"] = "Perfil do Usuário";
    Layout = "_LayoutLogin";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4">Perfil do Usuário</h2>

    <div class="card shadow">
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Nome:</strong> @Model.nome
                </li>
                <li class="list-group-item">
                    <strong>Email:</strong> @Model.email
                </li>
                <li class="list-group-item">
                    <strong>Senha:</strong> @Model.senha
                </li>
                <li class="list-group-item">
                    <strong>Telefone:</strong> @Model.telefone
                </li>
                <li class="list-group-item">
                    <strong>CPF:</strong> @Model.CPF
                </li>
            </ul>

            <div class="mt-4 d-flex justify-content-between">
                <a href="" class="btn btn-warning">Editar Dados</a>
                <a href="" class="btn btn-danger">Sair</a>
            </div>
        </div>
    </div>
</div>